datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Player {
  city      String?
  createdAt DateTime @default(now())
  games     String?
  id        String   @id @default(cuid())
  ident     Int
  sport     String?
  updatedAt DateTime @updatedAt
}
